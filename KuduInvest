<!-- Deposit Form -->
<div id="depositForm" class="wallet-box">
  <h2>Deposit Funds</h2>
  <p>Enter the amount you want to deposit:</p>
  <input type="number" id="depositAmount" placeholder="Enter amount (ZAR)">
  <button onclick="makeDeposit()">Deposit</button>
</div>
<script>
  function makeDeposit() {
    const amount = document.getElementById('depositAmount').value;
    if (!amount || amount <= 0) {
      alert("Please enter a valid deposit amount.");
      return;
    }

    // Simulate deposit process
    alert("Processing your deposit of R" + amount + " ...");

    // Redirect to success page after "processing"
    setTimeout(() => {
      window.location.href = "success.html";
    }, 2000);
  }
</script>
<script>
  // Load history from localStorage
  function loadHistory() {
    const history = JSON.parse(localStorage.getItem("transactions")) || [];
    const list = document.getElementById("historyList");
    list.innerHTML = "";
    history.forEach(item => {
      const li = document.createElement("li");
      li.textContent = `${item.date} | ${item.type} | R${item.amount} | ${item.status}`;
      list.appendChild(li);
    });
  }

  function saveTransaction(type, amount, status) {
    const history = JSON.parse(localStorage.getItem("transactions")) || [];
    history.unshift({
      date: new Date().toLocaleString(),
      type,
      amount,
      status
    });
    localStorage.setItem("transactions", JSON.stringify(history));
    loadHistory();
  }

  function makeDeposit() {
    const amount = document.getElementById('depositAmount').value;
    if (!amount || amount <= 0) {
      alert("Please enter a valid deposit amount.");
      return;
    }

    alert("Processing your deposit of R" + amount + " ...");

    setTimeout(() => {
      saveTransaction("Deposit", amount, "✅ Successful");
      window.location.href = "success.html";
    }, 2000);
  }

  function makeWithdraw() {
    const amount = document.getElementById('withdrawAmount').value;
    if (!amount || amount <= 0) {
      alert("Please enter a valid withdrawal amount.");
      return;
    }

    const status = document.getElementById("withdrawStatus");
    status.innerHTML = "⏳ Withdrawal of R" + amount + " is Processing (72hrs)...";
    saveTransaction("Withdrawal", amount, "⏳ Processing");

    // Simulate timeline
    setTimeout(() => {
      status.innerHTML = "✅ Withdrawal Approved (after 68hrs)";
      saveTransaction("Withdrawal", amount, "✅ Approved (after 68hrs)");
    }, 5000);

    setTimeout(() => {
      status.innerHTML = "💸 Sent to Bank";
      saveTransaction("Withdrawal", amount, "💸 Sent to Bank");
    }, 8000);
  }

  // Load history on page load
  window.onload = loadHistory;
</script>

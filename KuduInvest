document.getElementById("investForm").addEventListener("submit", function(e) {
  e.preventDefault();
  let amount = document.getElementById("amount").value;

  FlutterwaveCheckout({
    public_key: "FLWPUBK_TEST-xxxxxxxxxxxxxxxxxxxxxxx-X",
    tx_ref: "kuduvest_" + Date.now(),
    amount: amount,
    currency: "ZAR",
    payment_options: "card, banktransfer, ussd",
    customer: {
      email: firebase.auth().currentUser ? firebase.auth().currentUser.email : "guest@kuduvest.com",
      phonenumber: "+27636276638",
      name: "KuduVest Investor",
    },
    callback: function (data) {
      // Save to Firestore
      firebase.firestore().collection("transactions").add({
        user: firebase.auth().currentUser ? firebase.auth().currentUser.uid : "guest",
        type: "deposit",
        amount: amount,
        status: "success",
        date: new Date()
      }).then(() => {
        window.location.href = "thankyou.html";
      });
    },
    onclose: function() {
      alert("Payment closed.");
    },
  });
});
public_key: "FLWPUBK_TEST-xxxxxxxxxxxxxxxxxxxxxxx-X"
